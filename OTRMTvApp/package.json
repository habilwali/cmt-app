{
  "name": "OTRMTvApp",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "start": "react-native start --reset-cache",
    "start:clean": "react-native start --reset-cache",
    "test": "jest",
    "clean": "cd android && gradlew clean && cd ..",
    "clean:metro": "npx react-native start --reset-cache",
    "clean:all": "cd android && gradlew clean && cd .. && npx react-native start --reset-cache",
    "clean:bundle": "if exist android\\app\\src\\main\\assets rmdir /s /q android\\app\\src\\main\\assets",
    "build:apk": "npm run clean:bundle && cd android && gradlew clean && cd .. && npx react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res && cd android && gradlew assembleRelease && cd ..",
    "build:apk:debug": "powershell -ExecutionPolicy Bypass -File build-standalone-apk.ps1 -BuildType debug",
    "build:apk:debug:standalone": "powershell -ExecutionPolicy Bypass -File build-standalone-debug-apk.ps1",
    "build:apk:release": "npm run clean:bundle && cd android && gradlew clean && cd .. && npx react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res && cd android && gradlew assembleRelease && cd .."
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "react": "19.2.0",
    "react-native": "npm:react-native-tvos@0.83.1-0",
    "react-native-device-info": "^15.0.1",
    "react-native-qrcode-svg": "^6.3.21",
    "react-native-safe-area-context": "^5.5.2",
    "react-native-svg": "^15.15.1",
    "react-native-vector-icons": "^10.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@react-native-community/cli": "20.0.0",
    "@react-native-community/cli-platform-android": "20.0.0",
    "@react-native-community/cli-platform-ios": "20.0.0",
    "@react-native/babel-preset": "0.83.1",
    "@react-native/eslint-config": "0.83.1",
    "@react-native/metro-config": "0.83.1",
    "@react-native/typescript-config": "0.83.1",
    "@types/jest": "^29.5.13",
    "@types/react": "^19.2.0",
    "@types/react-native-vector-icons": "^6.4.18",
    "@types/react-test-renderer": "^19.1.0",
    "eslint": "^8.19.0",
    "jest": "^29.6.3",
    "prettier": "2.8.8",
    "react-test-renderer": "19.2.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20"
  }
}
